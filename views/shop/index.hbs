<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h1>Available Coffee</h1>
    <hr />
  </div>
</div>

{{# each products }}
<div class="row">
  {{# each this}}
  <div class="col-md-3">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="Coffee" class="img-responsive coffee-img">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description">{{ this.description }}</p>
        <div class="clearfix">
          <div class="price pull-left"><strong>${{ this.price }}</strong></div>
          <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
